<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:paddingLeft="@dimen/dimen_17"
        android:paddingRight="@dimen/dimen_17"
        android:paddingBottom="@dimen/dimen_16">

        <com.peakmain.ui.widget.ShapeTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:text="清空选项"
            android:textSize="@dimen/font_14"
            app:shapeTvRadius="@dimen/dimen_4"
            app:shapeTvStrokeColor="@color/color_d4d4d5"
            app:shapeTvStrokeWidth="@dimen/dimen_0_5" />

        <com.peakmain.ui.widget.ShapeTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_weight="2"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            app:shapeTvBackgroundColor="@color/color_003A40"
            app:shapeTvRadius="@dimen/dimen_4" />
    </LinearLayout>
</LinearLayout>