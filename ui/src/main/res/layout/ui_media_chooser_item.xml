<?xml version="1.0" encoding="utf-8"?>
<com.peakmain.ui.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.peakmain.ui.widget.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_marginRight="@dimen/dimen_3" />

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/media_selected_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/dimen_5"
        android:src="@drawable/ui_ic_media_chooser" />


    <LinearLayout
        android:id="@+id/camera_tv"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ui_ic_photo_camera"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/ui_take_photo"
            android:textColor="@color/color_CDCECE"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>


</com.peakmain.ui.widget.SquareFrameLayout>