<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定以CircleImageView属性-->
    <declare-styleable name="ShapeTextView">
        <!--设置线条的宽度-->
        <attr name="shapeTvStrokeWidth" format="dimension|reference" />
        <!--设置线条的颜色-->
        <attr name="shapeTvStrokeColor" format="color|reference" />
        <!--设置弧度-->
        <attr name="shapeTvRadius" format="dimension|reference" />
        <!--设置背景颜色-->
        <attr name="shapeTvBackgroundColor" format="color|reference" />
        <!--设置渐变开始颜色-->
        <attr name="shapeTvStartColor" format="color|reference" />
        <!--设置渐变结束颜色-->
        <attr name="shapeTvEndColor" format="color|reference" />
        <!--设置渐变方向-->
        <attr name="shapeTvOriention" format="integer">
            <enum name="LEFT_RIGHT" value="0" />
            <enum name="TOP_BOTTOM" value="1" />
        </attr>
        <!--RECTANGLE=0, OVAL=1, LINE=2, RING=3 默认是0-->
        <attr name="shapeTvShape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <!--是否开启点击后动画效果 默认false-->
        <attr name="shapeTvActiveMotion" format="boolean" />
        <!--按下去后文字颜色-->
        <attr name="shapeTvPressedColor" format="color|reference" />
    </declare-styleable>

    <!--自定义CircleImageView 属性-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>


    <!--自定义LinearLayout-->
    <declare-styleable name="ShapeLinearLayout">

        <attr name="shapeLlStrokeWidth" format="dimension|reference" />
        <attr name="shapeLlStrokeColor" format="color|reference" />
        <!--background color-->
        <attr name="shapeLlBackgroundColor" format="color|reference" />
        <!--background radius-->
        <attr name="shapeLlRadius" format="dimension|reference" />
        <attr name="shapeLlStartColor" format="color|reference" />
        <attr name="shapeLlEndColor" format="color|reference" />
    </declare-styleable>


    <!--自定义带有删除按钮的Edittext-->
    <declare-styleable name="AutoDeleteEditText">
        <!--字体大小-->
        <attr name="adet_text_size" format="dimension" />
        <!--字体颜色-->
        <attr name="adet_text_color" format="color|reference" />
        <!--未输入文字是字体颜色-->
        <attr name="adet_hint_color" format="color|reference" />
        <!--是否内容居上-->
        <attr name="adet_isTop" format="boolean|reference" />
        <!--内容内边距离顶部的距离-->
        <attr name="adet_padding_top" format="dimension|reference" />
        <!--hint的资源-->
        <attr name="adet_hint" format="string|reference" />
        <!--是否单行-->
        <attr name="adet_isSingle" format="boolean|reference" />
        <!--输入类型-->
        <attr name="android:inputType" />
        <!--输入长度-->
        <attr name="adet_max_length" format="integer|reference" />
        <!--删除的图片的颜色-->
        <attr name="adet_tint_color" format="color" />
        <!--删除图片的资源-->
        <attr name="adet_delete_src" format="reference|color" />
    </declare-styleable>


    <!--仿今日头条两种文字颜色-->
    <declare-styleable name="ColorTrackTextView">
        <!--文字未选中默认的颜色-->
        <attr name="originTextColor" format="color" />
        <!--文字选中的时候颜色-->
        <attr name="changeTextColor" format="color" />
        <!--是否显示下划线-->
        <attr name="isShowTextUnderLine" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BaseTabLayout">
        <!--文字未选中默认的颜色-->
        <attr name="originColor" format="color" />
        <!--文字选中的时候颜色-->
        <attr name="changeColor" format="color" />
        <!--是否显示下划线-->
        <attr name="isShowUnderLine" format="boolean" />
    </declare-styleable>

    <!--支付密码的自定义属性-->
    <declare-styleable name="PasswordEditText">
        <!-- 密码的个数 -->
        <attr name="passwordNumber" format="integer" />
        <!-- 密码圆点的半径 -->
        <attr name="passwordRadius" format="dimension" />
        <!-- 密码圆点的颜色 -->
        <attr name="passwordColor" format="color" />
        <!-- 分割线的颜色 -->
        <attr name="divisionLineColor" format="color" />
        <!-- 分割线的大小 -->
        <attr name="divisionLineSize" format="dimension" />
        <!-- 背景边框的颜色 -->
        <attr name="bgColor" format="color" />
        <!-- 背景边框的大小 -->
        <attr name="bgSize" format="dimension" />
        <!-- 背景边框的圆角大小 -->
        <attr name="bgCorner" format="dimension" />
    </declare-styleable>
    <!--九宫格解锁-->
    <declare-styleable name="LockScreenView">
        <!--外圈正常的颜色-->
        <attr name="lpNormalOutColor" format="color" />
        <!--外圈按下的颜色-->
        <attr name="lpPressOutColor" format="color" />
        <!--外圈错误的颜色-->
        <attr name="lpErrorOutColor" format="color" />
        <!--内圈正常的颜色-->
        <attr name="lpNormalInnerColor" format="color" />
        <!--内圈按下的颜色-->
        <attr name="lpPressInnerColor" format="color" />
        <!--内圈错误的颜色-->
        <attr name="lpErrorInnerColor" format="color" />
    </declare-styleable>


    <!--六个圆的默认颜色-->
    <color name="basic_defalut_inspect_color1">#FF9600</color>
    <color name="basic_defalut_inspect_color2">#02D1AC</color>
    <color name="basic_defalut_inspect_color3">#FFD200</color>
    <color name="basic_defalut_inspect_color4">#00C6FF</color>
    <color name="basic_defalut_inspect_color5">#00E099</color>
    <color name="basic_defalut_inspect_color6">#FF3891</color>
    <array name="inspect_circle_color">
        <item>@color/basic_defalut_inspect_color1</item>
        <item>@color/basic_defalut_inspect_color2</item>
        <item>@color/basic_defalut_inspect_color3</item>
        <item>@color/basic_defalut_inspect_color4</item>
        <item>@color/basic_defalut_inspect_color5</item>
        <item>@color/basic_defalut_inspect_color6</item>
    </array>
    <array name="rotation_loading_view">
        <item>@color/basic_defalut_inspect_color1</item>
        <item>@color/basic_defalut_inspect_color2</item>
        <item>@color/basic_defalut_inspect_color3</item>
        <item>@color/basic_defalut_inspect_color6</item>
    </array>

    <!--58同城加载的loading-->
    <declare-styleable name="ShapeView">
        <attr name="svCircleColor" format="color" />
        <attr name="svRectColor" format="color" />
        <attr name="svTriangleColor" format="color" />
    </declare-styleable>
    <!--recyclerview的多状态布局的属性-->
    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="noNetworkView" format="reference" />
    </declare-styleable>

    <!--自定义键盘的属性-->
    <declare-styleable name="customKeyboardView">
        <attr name="ckExtraKey" format="boolean"/>
    </declare-styleable>
</resources>